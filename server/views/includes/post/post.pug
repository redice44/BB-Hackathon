if post
  article.media(style='height: ' + post.height + 'px')
    if post.type === 'image'
      img(src=post.url, style='width: ' + post.width + 'px; height: ' + post.height + 'px')
    else
      video(src=post.url, style='width: ' + post.width + 'px; height: ' + post.height + 'px', controls)
  if post.description
    article.media-description
      p= post.description
